---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Services from '../components/Services.astro';
import Invitation from '../components/Invitation.astro';
import Projects from '../components/Projects.astro';
import FAQ from '../components/FAQ.astro';
---

<Layout title="Image Crafter | Inicio">
	<Header />
	<main class="relative py-6 min-[562px]:py-12 border-t border-[#e4e4e4] flex flex-col gap-20 min-[562px]:gap-28 justify-center items-center [&>*]:px-4 [&>*]:lg:px-0">
		<Services />
		<Invitation />
		<Projects />
		<FAQ />

		<div class="fixed bottom-2 right-1 md:right-6 !p-0">
			<a href="#init" class="flex flex-col gap-2 justify-center items-center"><span class=" rotate-90 uppercase font-semibold">Top</span>
				<span class="w-0.5 h-12 bg-black"></span>
			</a>
		</div>
	</main>
</Layout>


